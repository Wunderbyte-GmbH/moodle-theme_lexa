{{!
    @template mod_booking/bookit_price

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region

    Example context (json):
    {
        "itemname" : "myitem",
        "price" : "10",
        "currency" : "EUR",
        "componentname" : "local_shoppingcart",
        "description" : "description",
        "imageurl" : "https://mypic.jpg",
        "pricecategoryidentifier" : "categoryid",
        "pricecategoryname" : "student"
    }
}}
{{#onlist}}
    <div class="booking-button-notifyarea mb-3">
        {{> mod_booking/button_notifyme }}
    </div>
{{/onlist}}
{{#price}}
<div class="w-100 d-flex justify-content-center booking-button-area"
    data-itemid="{{itemid}}"
    data-area="{{area}}"
    data-results="{{results}}"
    {{#dataaction}}data-action="{{dataaction}}"{{/dataaction}} >
    {{#top}}
        <div class="booking-button-toparea mb-2 {{class}}" role="{{role}}">
            {{{label}}}
        </div>
    {{/top}}
    <div class="pricecontainer {{#fullwidth}}w-100{{/fullwidth}} d-flex flex-wrap">
        <span class="pricecurrency h5 font-weight-normal">
            {{price}} {{currency}}
        </span>
        {{#shoppingcartisavailable}}
            {{#link}}<a href="{{link}}" target="_blank" data-action='bookondetails'>{{/link}}
            <div class="bookit-addtocartbtn-area">
                {{> local_shopping_cart/addtocartdb }}
            </div>
            {{#link}}</a>{{/link}}
        {{/shoppingcartisavailable}}
        {{#priceitems}}
            <p><i>{{pricecategoryname}}</i></p>
        {{/priceitems}}
    </div>
    {{#sub}}
        <div class="booking-button-subarea mb-2 h6 {{class}}" role="{{role}}">
            {{{label}}}
        </div>
    {{/sub}}
</div>
{{/price}}
{{^price}}
    {{#priceitems}}
        <div class="pricecurrency"> {{price}} {{currency}} <i>{{pricecategoryname}}</i></div>
    {{/priceitems}}
{{/price}}
{{^price}}
    {{#str}} nopriceisset, mod_booking, {{pricecategoryidentifier}} {{/str}}
{{/price}}