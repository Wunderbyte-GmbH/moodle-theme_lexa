{{!
    @template local_wunderbyte_table/component_switchtemplates
    Template for the wunderbyte table template switcher.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none

    Example context (json):
    {
        "switchtemplates": [
            {
                "templates": [
                    {
                        "template": "local_wunderbyte_table/twtable_list",
                        "label": "List",
                        "viewparam": 0,
                        "selected": true
                    },
                    {
                        "template": "local_wunderbyte_table/twtable_cards",
                        "label": "Cards",
                        "viewparam": 1
                    }
                ]
            }
        ]
    }
}}
{{#switchtemplates}}
<span class="lexa-templateswitcher-container mr-3" aria-label="Template switcher dropdown">
    <span class="lexa-templateswitcher-icon-container">
        <i class="fa-solid fa-table-list lexa-templateswitcher-icon" aria-hidden="true"></i>
    </span>
    <span class="lexa-templateswitcher-text">{{#str}} templateswitchertext, theme_lexa {{/str}}:</span>
    <select style="border: none;" class="lexa-templateswitcher-select" id="wbtabletemplateswitcher"
        data-id="1" data-type="wb_action_button" data-methodname="switchtemplates" data-nomodal="true">
        {{#templates}}
        <option value="{{template}} {{viewparam}}" {{#selected}}selected{{/selected}}>
            {{#label}}{{.}}{{/label}}
        </option>
        {{/templates}}
    </select>
</span>
{{/switchtemplates}}
