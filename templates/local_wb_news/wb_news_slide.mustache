{{!
    @template local_wb_news/wb_news_slide

    Classes required for JS:
    * none

    Example context (json):
    {
        "headline": "Sample Headline",
        "description": "Sample description text.",
        "bgimage": "path/to/image.jpg",
        "headerimage": "path/to/headerimage.jpg",
        "imagecaption": "Sample image caption",
        "instanceid": "unique_id",
        "editmode": true,
        "lightmode": true,
        "cssclasses": "extra-class",
        "tags": ["tag1", "tag2"]
    }
}}

<div class="d-flex justify-content-between align-items-center wb_news_slide">
    <div class="left-panel{{#lightmode}} text-light{{/lightmode}}{{#cssclasses}} {{cssclasses}}{{/cssclasses}}">
        {{#tags}} <span class="badge badge-success">{{.}}</span>{{/tags}}
        {{#headline}}
            <h1>{{{headline}}}</h1>
        {{/headline}}
        {{{description}}}
        {{#btntext}}
        <a href="{{btnlink}}" class="btn btn-primary mt-4">{{btntext}}</a>
        {{/btntext}}
        <div class="row mt-4 justify-content-center">
            <a class="carousel-control-prev mt-4 mr-2" href="#wb_news_carousel-{{instanceid}}" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next mt-4 ml-2" href="#wb_news_carousel-{{instanceid}}" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        {{#editmode}}
        {{> local_wb_news/editsinglenews}}
        {{/editmode}}
    </div>
    <div class="right-panel">
        <div class="image-container w-100">
            <img src="{{bgimage}}{{headerimage}}" class="img-fluid w-100" alt="{{bgimagetext}}{{headerimagetext}}">
            {{#imagecaption}}
            <div class="image-caption">{{imagecaption}}</div>
            {{/imagecaption}}
        </div>
    </div>
</div>
