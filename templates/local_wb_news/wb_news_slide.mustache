{{!
    @template local_wb_news/wb_news_slide

    Classes required for JS:
    * none

    Example context (json):
    {
        "headline": "Sample Headline",
        "description": "Sample description text.",
        "bgimage": "path/to/image.jpg",
        "headerimage": "path/to/headerimage.jpg",
        "imagecaption": "Sample image caption",
        "instanceid": "unique_id",
        "editmode": true,
        "lightmode": true,
        "cssclasses": "extra-class",
        "tags": ["tag1", "tag2"]
    }
}}
<div class="d-flex justify-content-between align-items-center wb_news_slide">
    <div class="col-md-1"></div>
    <div class="col-md-3 {{#lightmode}} text-light{{/lightmode}}{{#cssclasses}} {{cssclasses}}{{/cssclasses}}">
        {{#tags}} <span class="badge badge-success">{{.}}</span>{{/tags}}
        {{#headline}}
            <h2 class="lexa-h2">{{{headline}}}</h2>
        {{/headline}}
        <span class="lexa-input">
        {{{description}}}
        </span>
        {{#btntext}}
        <a href="{{btnlink}}" class="btn btn-primary mt-4" {{#btnlinktarget}}target="{{.}}"{{/btnlinktarget}} {{#btnlinkrel}}rel="{{.}}"{{/btnlinkrel}}>{{btntext}}>{{btntext}}</a>
        {{/btntext}}
        {{^dontshowarrows}}
            <div class="row mt-4 justify-content-start">
                <div class="col-md-6 mb-3">
                    <a class="mt-4 wb_news_slider_button_left" href="#wb_news_carousel-{{instanceid}}" role="button" data-slide="prev">
                        <span class="fa-solid fa-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="mt-4 wb_news_slider_button_right" href="#wb_news_carousel-{{instanceid}}" role="button" data-slide="next">
                        <span class="fa-solid fa-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        {{/dontshowarrows}}
        {{#editmode}}
        {{> local_wb_news/editsinglenews}}
        {{/editmode}}
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6">
        <div class="image-container w-100">
            <img src="{{bgimage}}{{headerimage}}" class="img-fluid w-100" aria-label="{{bgimagetext}}{{headerimagetext}}">
            {{#imagecaption}}
            <div class="image-caption">{{imagecaption}}</div>
            {{/imagecaption}}
        </div>
    </div>
    <div class="col-md-1"></div>
</div>
