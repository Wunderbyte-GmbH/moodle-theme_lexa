{{!
    @template local_wb_news/wb_news_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Grid 1",
        "news": [
            {
                "id": "news1",
                "bgimage": "/local/wb_news/img/wb.jpg",
                "icon": "/local/wb_news/img/icon.png",
                "headline": "News 1",
                "subheadline": "Image and Icon",
                "description": "Image and Icon",
                "btnlink": "https://link1.com",
                "btntext": "Read More",
                "headerimage": 1
            }
        ]
    }
}}

<div class="wb-news-container wb-news-image-row mt-5 wb_news {{#cssclasses}} {{cssclasses}}{{/cssclasses}}" style="" data-id="{{id}}">
    {{#editmode}}
        {{> local_wb_news/edit}}
    {{/editmode}}
    {{#news}}
    <div class="d-block position-relative mainrow" style="{{#additionaldata.height}} height:{{.}}px {{/additionaldata.height}}">
        {{^additionaldata.video}}
             <span class="bg-imageslider" style="background-image: url({{headerimage}});    width: 50%;
    position: absolute;
    height: 100%;
    background-size: cover;
    {{#additionaldata.objectfit}}background-size: {{.}};{{/additionaldata.objectfit}}
    background-position: center;
    {{#additionaldata.backgroundposition}}background-position: {{.}};{{/additionaldata.backgroundposition}}
    {{#additionaldata.right}}right: 0;{{/additionaldata.right}}
    {{#additionaldata.left}}left: 0;{{/additionaldata.left}}
    {{#additionaldata.right}}border-radius: 90px 0 0 90px;{{/additionaldata.right}}
    {{#additionaldata.left}}border-radius: 0px 90px 90px 0px;{{/additionaldata.left}}
    bottom: 0;
    background-repeat: no-repeat;"></span>
        {{/additionaldata.video}}
        <div class="container-xl h-100 px-0">
            	<div class="col-md-12 h-100 row m-auto reverseonmobile {{#additionaldata.left}}flex-row-reverse{{/additionaldata.left}} px-0 py-4
                ">
                <div class="col-md-1"></div>
                <div class="col-md-5 no-gutter d-flex flex-column p-3 justify-content-center" style="{{#additionaldata.pl}}padding-left: {{.}}px !important{{/additionaldata.pl}}
                {{#additionaldata.pr}}padding-right: {{.}}px !important{{/additionaldata.pr}}">
                    {{#headline}}
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="lexa-h1">{{{.}}}</h1>
                        </div>
                    </div>
                    {{/headline}}
                    {{#subheadline}}
                    <div class="row">
                        <div class="col-md-12">
                            <h1  class="lexa-h1" >{{{.}}}</h1>
                        </div>
                    </div>
                    {{/subheadline}}
                    {{#shortdescription}}
                    <div class="row">
                        <div class="col-md-10">
                            <p  class="lexa-input">{{{.}}}</p>
                        </div>
                    </div>
                    {{/shortdescription}}
                         {{#btntext}}
                        <div class="row mt-3">
                            <div class="col-md-10">
                                <a class="btn btn-primary btn-lg lexa-b1 gradienthover" role="button" href="{{btnlink}}"
                                    {{#btnlinktarget}}target="{{.}}"{{/btnlinktarget}} {{#btnlinkrel}}rel="{{.}}"{{/btnlinkrel}}>
                                    {{btntext}} <i class="fa-solid fa-arrow-right ml-2"></i>
                                </a>
                            </div>
                        </div>
                            {{/btntext}}
                </div>
                       {{#additionaldata.video}}
                <div class="col-md-6 d-flex h-100 {{#additionaldata.right}}pr-0{{/additionaldata.right}} {{#additionaldata.left}}justify-content-end pl-0{{/additionaldata.left}} wb-videocolumn" >
                    <video preload="auto" height="100%"  width="100%" controls  poster="{{{icon}}}"  style="object-fit: contain; {{#additionaldata.right}}border-radius: 90px 0 0 90px;{{/additionaldata.right}}
    {{#additionaldata.left}}border-radius: 0px 90px 90px 0px;{{/additionaldata.left}}">
                        <source src="{{headerimage}}">
                    </video>
	            </div>
        {{/additionaldata.video}}
                </div>
    {{#editmode}}
    {{> local_wb_news/editsinglenews}}
    {{/editmode}}


        </div>
    </div>
    {{/news}}
</div>
