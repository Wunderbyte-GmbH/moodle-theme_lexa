{{!
    @template local_wb_news/wb_news_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Grid 1",
        "news": [
            {
                "id": "news1",
                "bgimage": "/local/wb_news/img/wb.jpg",
                "icon": "/local/wb_news/img/icon.png",
                "headline": "News 1",
                "subheadline": "Image and Icon",
                "description": "Image and Icon",
                "btnlink": "https://link1.com",
                "btntext": "Read More",
                "headerimage": 1
            }
        ]
    }
}}

<div class="wb-news-container wb mt-5 wb_news container" data-id="{{id}}">
    {{#editmode}}
        {{> local_wb_news/editsinglenews}}
    {{/editmode}}
      <div class="container-timeline{{#additionaldata.right}} right{{/additionaldata.right}}" data-number="
      {{^additionaldata.date}}{{sortorder}}{{/additionaldata.date}}
      {{#additionaldata.date}}{{additionaldata.date}}{{/additionaldata.date}}
      "
      >
        <div class="timeline-content">
          <img src="{{headerimage}}" alt="{{headerimagetext}}" class="img-fluid mb-3">
          <h5>{{{headline}}}{{sortorder}}</h5>
          <p>{{{description}}}</p>
        </div>
      </div>
</div>
