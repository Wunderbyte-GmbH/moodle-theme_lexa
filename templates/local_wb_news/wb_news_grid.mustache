{{!
    @template local_wb_news/wb_news_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Grid 1",
        "news": [
            {
                "id": "news1",
                "bgimage": "/local/wb_news/img/wb.jpg",
                "icon": "/local/wb_news/img/icon.png",
                "headline": "News 1",
                "subheadline": "Image and Icon",
                "description": "Image and Icon",
                "btnlink": "https://link1.com",
                "btntext": "Read More",
                "headerimage": 1
            }
        ]
    }
}}

<div class="wb-news-container mt-5 wb_news container" data-id="{{id}}">
    {{#editmode}}
        {{> local_wb_news/edit}}
    {{/editmode}}
	<div class="row">
		{{#news}}
		<div class="col-md-{{columns}} mb-4">
            {{#headerimage}}
                {{> local_wb_news/wb_news_card_headerimage}}
            {{/headerimage}}
            {{^headerimage}}
                {{> local_wb_news/wb_news_card_bgimage}}
            {{/headerimage}}
	    </div>
	    {{/news}}
	</div>
</div>
