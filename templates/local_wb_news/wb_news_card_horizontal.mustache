{{!
    @template local_wb_news/wb_news_card_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "bgimage": "/local/wb_news/img/wb.jpg",
        "icon": "/local/wb_news/img/icon.png",
        "headline": "News 1",
        "subheadline": "Image and Icon",
        "description": "Image and Icon",
        "btnlink": "https://link1.com",
        "btntext": "Read More"
    }
}}

<div class="card h-100{{#lightmode}} wb_news-light{{/lightmode}}{{#cssclasses}} {{cssclasses}}{{/cssclasses}}"{{#bgcolor}} style="background-color: {{bgcolor}};"{{/bgcolor}}>
    {{^btntext}}
    {{#btnlink}}<a href="{{btnlink}}" class="stretched-link"></a> {{/btnlink}}
    {{/btntext}}
    <div class="row">
    <div class="col-md-6">
        <img class="w-100 img-fluid wb_news-headerimage" src="{{bgimage}}" alt="{{bgimagetext}}">
    </div>
    <div class="col-md-6">
    {{#icon}}
    <div class="text-center">
        <img src="{{icon}}" class="card-icon mb-2 text-center" alt="{{icontext}}">
    </div>
    {{/icon}}
    <h5 class="card-title">{{{headline}}}</h5>
    <h6 class="card-subtitle mb-2{{^lightmode}} text-muted{{/lightmode}}">{{{subheadline}}}</h6>
    <p class="card-text">{{{description}}}</p>
    </div>
    </div>
    {{#editmode}}
    {{> local_wb_news/editsinglenews}}
    {{/editmode}}
</div>
