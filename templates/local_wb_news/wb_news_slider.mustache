{{!
    @template local_wb_news/wb_news_grid

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Slider 1",
        "groupednews": [
            {
                "firstitem": 1,
                "news": [
                    {
                        "bgimage": "/local/wb_news/img/wb.jpg",
                        "icon": "/local/wb_news/img/icon.png",
                        "headline": "News 1",
                        "subheadline": "Image and Icon",
                        "description": "Image and Icon",
                        "btnlink": "https://link1.com",
                        "btntext": "Read More",
                        "headerimage": 1
                    }
                ]
            }
        ]
    }
}}

<div id="wb_news_carousel-{{instanceid}}" class="carousel slide container mt-4 wb_news" data-ride="carousel" data-id="{{instanceid}}">
        {{#editmode}}
            {{> local_wb_news/edit}}
        {{/editmode}}
    <div class="carousel-inner py-2">
        {{#news}}
            <div class="carousel-item{{#active}} active{{/active}}{{#cssclasses}} {{cssclasses}}{{/cssclasses}}{{#lightmode}} wb_news-light{{/lightmode}}">
                <div class="row">
                    {{> local_wb_news/wb_news_slide}}
                </div>
            </div>
        {{/news}}
    </div>
</div>

{{#js}}
    require(['local_wb_news/editnews'], function(fn) {
        fn.init({{instanceid}});
    });
{{/js}}