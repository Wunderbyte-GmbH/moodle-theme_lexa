{{!
    @template local_wb_news/wb_news_grid

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "wbTabs",
        "groupednews": [
            {
                "firstitem": 1,
                "news": [
                    {
                        "bgimage": "/local/wb_news/img/wb.jpg",
                        "icon": "/local/wb_news/img/icon.png",
                        "headline": "News 1",
                        "subheadline": "Image and Icon",
                        "description": "Image and Icon",
                        "btnlink": "https://link1.com",
                        "btntext": "Read More",
                        "headerimage": 1
                    }
                ]
            }
        ]
    }
}}

<ul class="nav nav-tabs wb_news" id="wb_news_tab-{{id}}" role="tablist">
        {{#editmode}}
            {{> local_wb_news/edit}}
        {{/editmode}}
    {{#news}}
    <li class="nav-item">
        <a class="nav-link{{#active}} active{{/active}}" id="{{name}}-tab" data-toggle="tab" href="#tab-{{ident}}" role="tab" aria-controls="{{id}}" aria-selected="{{#active}}true{{/active}}{{^active}}false{{/active}}">
            {{{headline}}}
        </a>
    </li>
    {{/news}}
</ul>
<div class="tab-content wb_news" id="wb_news_tab_content">
    {{#news}}
    <div class="tab-pane fade {{#active}}show active{{/active}}" id="tab-{{ident}}" role="tabpanel" aria-labelledby="{{ident}}-tab">
        <div class="container mt-5">
            {{> local_wb_news/wb_tab}}
        </div>
    </div>
    {{/news}}
</div>
