{{!
    @template local_wb_news/wb_news_card_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "bgimage": "/local/wb_news/img/wb.jpg",
        "icon": "/local/wb_news/img/icon.png",
        "headline": "News 1",
        "subheadline": "Image and Icon",
        "description": "Image and Icon",
        "btnlink": "https://link1.com",
        "btntext": "Read More"
    }
}}

<div class="card {{#lightmode}} wb_news-light{{/lightmode}}{{#cssclasses}} {{cssclasses}}{{/cssclasses}} mb-4"{{#bgcolor}} style="background-color: {{bgcolor}}; min-height: 280px; border: none"{{/bgcolor}}>
            {{#detailviewurl}}<a href="{{detailviewurl}}" class="stretched-link"></a> {{/detailviewurl}}
            <div class="row" style="min-height: 280px;">
                <div class="col-md-5">
                    {{#headerimage}}
                    <img class="h-100 img-fluid rounded" style="object-fit:cover;" src="{{headerimage}}" alt="{{headerimagetext}}">
                    {{/headerimage}}
                    {{#bgimage}}
                    <img class="h-100 img-fluid rounded" style="object-fit:cover;"  src="{{bgimage}}" alt="{{bgimagetext}}">
                    {{/bgimage}}
                </div>
                <div class="col-md-7">
                    <div class="card-body h-100">
                        <div class="d-flex justify-content-start align-items-center">
                            {{#tags}} <span class="btn btn-outline-secondary mr-2 text-primary btn-sm rounded-lg d-flex align-items-center">{{.}}</span>{{/tags}}
                            <small style="border-left: 2px solid var(--lightgrayurise);
                                    padding-left: 10px;
                                }" class="text-muted">{{{publishedon}}}
                            </small>
                        </div>
                        <h5 class="card-title mt-2">{{{headline}}}</h5>
                        <h6 class="card-subtitle mb-2{{^lightmode}} text-muted{{/lightmode}}">{{{subheadline}}}</h6>
                        <p class="card-text">{{shortdescription}}</p>
                        <div class="media d-flex align-items-center mt-auto">
                          {{#profileurl}}
                            <img src="{{profileurl}}" class="img-fluid rounded-circle profileimg" alt="Profile Picture of {{fullname}}">
                        {{/profileurl}}
                            <div class="media-body d-flex align-items-center ml-2">
                                <h6 class="m-0 text-primary">{{fullname}}</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{#editmode}}
        {{> local_wb_news/editsinglenews}}
{{/editmode}}
</div>

