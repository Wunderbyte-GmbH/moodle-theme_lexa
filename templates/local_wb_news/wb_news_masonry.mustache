{{!
    @template local_wb_news/wb_news_grid

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Masonary 1",
        "news": [
            {
                "bgimage": "/local/wb_news/img/wb.jpg",
                "icon": "/local/wb_news/img/icon.png",
                "headline": "News 1",
                "subheadline": "Image and Icon",
                "description": "Image and Icon",
                "btnlink": "https://link1.com",
                "btntext": "Read More",
                "headerimage": 1
            }
        ]
    }
}}

<div class="wb-news-container mt-5 wb_news">
    <div class="masonry">
        {{#editmode}}
            {{> local_wb_news/edit}}
        {{/editmode}}
        {{#news}}
            {{#headerimage}}
                {{> local_wb_news/wb_news_card_headerimage}}
            {{/headerimage}}
            {{^headerimage}}
                {{> local_wb_news/wb_news_card_bgimage}}
            {{/headerimage}}
        {{/news}}
    </div>
</div>