{{!
    @template local_wb_news/wb_news_card_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "bgimage": "/local/wb_news/img/wb.jpg",
        "icon": "/local/wb_news/img/icon.png",
        "headline": "News 1",
        "subheadline": "Image and Icon",
        "description": "Image and Icon",
        "btnlink": "https://link1.com",
        "btntext": "Read More"
    }
}}

<div class="card d-flex flex-row h-100 align-items-start wb_news_card_crosslinks{{#lightmode}} wb_news-light{{/lightmode}}{{#cssclasses}} {{cssclasses}}{{/cssclasses}} {{#editmode}} mb-4 {{/editmode}}"{{#bgcolor}} style="background-color: {{bgcolor}};"{{/bgcolor}}>
    {{#icon}}<img src="{{icon}}" alt="{{icontext}}" class="col-md-3 mr-3">{{/icon}}
    <div>
        <h3>{{{headline}}}</h3>
        {{{description}}}
        {{#btntext}}
        <a href="{{btnlink}}">{{btntext}}</a>
        {{/btntext}}
    </div>
</div>
 {{#editmode}}
    {{> local_wb_news/editsinglenews}}
{{/editmode}}

