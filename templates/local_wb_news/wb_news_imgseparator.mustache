{{!
    @template local_wb_news/wb_news_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Grid 1",
        "news": [
            {
                "id": "news1",
                "bgimage": "/local/wb_news/img/wb.jpg",
                "icon": "/local/wb_news/img/icon.png",
                "headline": "News 1",
                "subheadline": "Image and Icon",
                "description": "Image and Icon",
                "btnlink": "https://link1.com",
                "btntext": "Read More",
                "headerimage": 1
            }
        ]
    }
}}

<div class="wb-news-container wb_news" data-id="{{id}}">
    {{#news}}
        {{#editmode}}
            {{> local_wb_news/editsinglenews}}
        {{/editmode}}
        {{#headerimage}}
            <div class="d-flex justify-content-start align-items-end" style="height: 100px; background: url({{headerimage}}) no-repeat center center; background-size: cover;
                {{#additionaldata.height}} height:{{.}}px {{/additionaldata.height}}">
                <div class="uskils-community-title title bg-primary px-5 py-2 h-auto text-white">
                    {{{headline}}}
                </div>
            </div>
        {{/headerimage}}
    {{/news}}
</div>
