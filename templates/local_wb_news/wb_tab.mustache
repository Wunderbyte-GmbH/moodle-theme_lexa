{{!
    @template local_wb_news/wb_tab

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Slider 1",
        "groupednews": [
            {
                "firstitem": 1,
                "news": [
                    {
                        "bgimage": "/local/wb_news/img/wb.jpg",
                        "icon": "/local/wb_news/img/icon.png",
                        "headline": "News 1",
                        "subheadline": "Image and Icon",
                        "description": "Image and Icon",
                        "btnlink": "https://link1.com",
                        "btntext": "Read More",
                        "headerimage": 1
                    }
                ]
            }
        ]
    }
}}

<div class="container wb_news_tabcontainer{{#lightmode}} wb_news-light{{/lightmode}}{{#cssclasses}} {{cssclasses}}{{/cssclasses}}">
    {{^btntext}}
    {{#btnlink}}<a href="{{btnlink}}" class="stretched-link" {{#btnlinktarget}}target="{{.}}"{{/btnlinktarget}} {{#btnlinkrel}}rel="{{.}}"{{/btnlinkrel}}>{{btntext}}></a> {{/btnlink}}
    {{/btntext}}
    <div class="wb_news_tabscontent">
        {{#editmode}}
        {{> local_wb_news/editsinglenews}}
        {{/editmode}}
        <div class="rounded-background"></div>
        <div class="row my-4 p-4">
            <div class="col-lg-6">
                {{#icon}}
                <div class="text-left">
                    <img src="{{icon}}" class="card-icon mb-2 text-center" aria-label="{{icontext}}">
                </div>
                {{/icon}}
                {{#tags}} <span class="badge badge-success">{{.}}</span>{{/tags}}
                {{#headline}}
                    <h3>{{{headline}}}</h3>
                {{/headline}}
                <p>
                    {{{description}}}
                </p>
                {{#btntext}}
                    <a href="{{btnlink}}" class="btn btn-primary mt-auto" {{#btnlinktarget}}target="{{.}}"{{/btnlinktarget}} {{#btnlinkrel}}rel="{{.}}"{{/btnlinkrel}}>{{btntext}}</a>
                {{/btntext}}
            </div>
            <div class="col-lg-6">
            {{#bgimage}}
                <img src="{{bgimage}}" class="img-fluid w-100" aria-label="{{bgimagetext}}">
            {{/bgimage}}
            </div>
        </div>
    </div>
</div>
