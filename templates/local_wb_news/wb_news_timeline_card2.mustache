{{!
    @template local_wb_news/wb_news_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Grid 1",
        "news": [
            {
                "id": "news1",
                "bgimage": "/local/wb_news/img/wb.jpg",
                "icon": "/local/wb_news/img/icon.png",
                "headline": "News 1",
                "subheadline": "Image and Icon",
                "description": "Image and Icon",
                "btnlink": "https://link1.com",
                "btntext": "Read More",
                "headerimage": 1
            }
        ]
    }
}}


<div class="wb-news-container wb-news-timeline2-container wb_news" data-id="{{id}}">
    {{#editmode}}
        {{> local_wb_news/editsinglenews}}
    {{/editmode}}
	<div class="container-timeline2" data-number="
	{{^additionaldata.date}}{{sortorder}}{{/additionaldata.date}}
	{{#additionaldata.date}}{{additionaldata.date}}{{/additionaldata.date}}
	"
	>
		<div class="timeline2-content">
        	<img src="{{headerimage}}" aria-label="{{headerimagetext}}" class="img-fluid mb-3 d-none d-md-block">
            <div class="mobile100center d-md-none">
			    <img src="{{headerimage}}" aria-label="{{headerimagetext}}" class="img-fluid mb-3">
            </div>
			<div>
				<h4 class="mb-3-lexa">{{headline}}</h4>
				<div class="lexa-input">{{{description}}}</div>
			</div>
		</div>
	</div>
</div>