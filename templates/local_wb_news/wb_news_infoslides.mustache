{{!
    @template local_wb_news/wb_news_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "id": "news Grid 1",
        "news": [
            {
                "id": "news1",
                "bgimage": "/local/wb_news/img/wb.jpg",
                "icon": "/local/wb_news/img/icon.png",
                "headline": "News 1",
                "subheadline": "Image and Icon",
                "description": "Image and Icon",
                "btnlink": "https://link1.com",
                "btntext": "Read More",
                "headerimage": 1
            }
        ]
    }
}}

<div class="wb-news-container mt-5 wb_news container-xl infosliderdesktop" data-id="{{id}}">
    {{#editmode}}
        {{> local_wb_news/edit}}
    {{/editmode}}
	<div class="row card-deck">
		{{#news}}
		<div class="col-md-{{columns}} mb-4">
            {{#headerimage}}
                {{> local_wb_news/wb_news_card_infoslides}}
            {{/headerimage}}
            {{^headerimage}}
                {{> local_wb_news/wb_news_card_infoslides}}
            {{/headerimage}}
	    </div>
	    {{/news}}
	</div>
</div>


<div id="newsCarousel" class="slide mt-5 wb_news container-xl infoslidermobile" data-id="{{id}}" >
<div id="carouseluriseIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
    <div class="carousel-inner" style="height: 500px; max-height: min-content;">
        {{#news}}
        <div class="carousel-item {{#slideactive}} active {{/slideactive}} h-100">
            {{#headerimage}}
            {{> local_wb_news/wb_news_card_infoslides}}
            {{/headerimage}}
            {{^headerimage}}
            {{> local_wb_news/wb_news_card_infoslides}}
            {{/headerimage}}
        </div>
        {{/news}}
    </div>
   <ol class="carousel-indicators">
        {{#news}}
        <li  {{#slideactive}}class="active" {{/slideactive}} data-target="#carouseluriseIndicators" data-slide-to="{{sliderindex}}"></li>
        {{/news}}
    </ol>
</div>
</div>