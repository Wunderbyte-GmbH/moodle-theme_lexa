{{!
    @template local_wb_news/wb_news_card_bgimage

    Classes required for JS:
    * none

    Example context (json):
    {
        "bgimage": "/local/wb_news/img/wb.jpg",
        "icon": "/local/wb_news/img/icon.png",
        "headline": "News 1",
        "subheadline": "Image and Icon",
        "description": "Image and Icon",
        "btnlink": "https://link1.com",
        "btntext": "Read More"
    }
}}

<div class="card h-100 wb_news_card_blog{{#lightmode}} wb_news-light{{/lightmode}}{{#cssclasses}} {{cssclasses}}{{/cssclasses}}" style="background-color: {{{bgcolor}}}; border: none;">
    {{#detailviewurl}}<a href="{{detailviewurl}}" class="stretched-link"></a> {{/detailviewurl}}
    {{#headerimage}}
    <img class="w-100 img-fluid wb_news-headerimage h-50" style="object-fit:cover;" src="{{headerimage}}" alt="{{headerimagetext}}">
    {{/headerimage}}
    {{#bgimage}}
    <img class="w-100 img-fluid wb_news-headerimage h-50" style="object-fit:cover;"  src="{{bgimage}}" alt="{{bgimagetext}}">
    {{/bgimage}}



    <div class="card-body">
        <div     {{#tags.0}}class="mb-2" {{/tags.0}}>
    {{#tags}} <span class="text-primary mr-1 rounded-sm p-1 px-2 small mb-2" style="border: 1px solid #D9E1E7; font-size: 0.75rem;">{{.}}</span>{{/tags}}
    </div>
    {{#icon}}
    <div class="text-center">
        <img src="{{icon}}" class="card-icon mb-2 text-center" alt="{{icontext}}">
    </div>
    {{/icon}}
    <h5 class="card-title font-weight-normal">{{{headline}}}</h5>
    <h6 class="card-subtitle mb-2{{^lightmode}} text-muted{{/lightmode}}">{{{subheadline}}}</h6>
    </div>
    <div class="card-footer">
    {{#btntext}}
        <a href="{{btnlink}}" class="btn btn-primary mt-auto">{{btntext}}</a>
    {{/btntext}}
    <div class="row no-gutters wb_news-userinfo">
        <div class="d-flex flex-grow-1 align-items-center">
            {{#profileurl}}
                <img src="{{profileurl}}" class="img-fluid rounded-circle profileimg" alt="Profile Picture of {{fullname}}">
            {{/profileurl}}
            <span class="pl-2 smaller text-primary lexa-b2">{{fullname}}</span>
            <span class="smaller pl-2 ml-auto" style="color: #809FB8">{{{publishedon}}}</span>
        </div>
    </div>
    </div>
    {{#editmode}}
        {{> local_wb_news/editsinglenews}}
    {{/editmode}}
</div>
